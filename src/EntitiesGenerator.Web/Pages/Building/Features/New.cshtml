@page
@inject MvcHelper MvcHelper
@inject IDisplayNameCollector<Code.EmptyPageModel> displayNameCollector;
@model Code.EmptyPageModel
@{
    ViewData["Title"] = "New Feature";
    MvcHelper.SetActiveSubMenuItem(ViewData, "Features");

    var emptyFeature = new FeatureViewModel();

    displayNameCollector.Collect(x => emptyFeature.IsActive, Html)
                        .Collect(x => emptyFeature.Position, Html)
                        .Collect(x => emptyFeature.Name, Html);
}

@section Head {
    <environment include="Development">
        <link href="~/assets/building/features/new/app.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/assets/building/features/new/app.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<section id="app" v-cloak>
    <edit-page new-mode
               api-url="@Url.Action("Get", "Features")"
               :display-names='@displayNameCollector.ToJson()'
               view-url="@Url.Page("View", new { id = "_id_" }).Replace("/_id_", string.Empty)"
               return-url="@Url.Page("Index")"></edit-page>
</section>

@section Scripts {
    <environment include="Development">
        <script src="~/assets/building/features/new/app.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/building/features/new/app.min.js" asp-append-version="true"></script>
    </environment>
}
