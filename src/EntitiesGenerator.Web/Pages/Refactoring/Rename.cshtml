@page
@inject MvcHelper MvcHelper
@model Shared.EmptyPageModel
@{
    ViewData["Title"] = "Rename";
    MvcHelper.SetActiveSubMenuItem(ViewData, "Rename");
}

<section id="app" v-cloak>
    <rename-page check-path-url="@Url.Action("CheckPath", "Rename")"
                 find-url="@Url.Action("Find", "Rename")"
                 replace-url="@Url.Action("Replace", "Rename")"></rename-page>
</section>

@section Scripts {
    <environment include="Development">
        <script src="~/assets/refactoring/rename/app.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/refactoring/rename/app.min.js" asp-append-version="true"></script>
    </environment>
}
